<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="sample.SampleController"
          stylesheets="/sample/sample.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button fx:id="takeOrders" text="Прийняти заказ" onAction="#orderAction" disable="true"  GridPane.columnIndex="3"/>
    <Button fx:id="Start"  text="Почати срану роботу"  GridPane.columnIndex="1" onAction="#start"/>
    <Label GridPane.columnIndex="2" alignment="TOP_CENTER" fx:id="Hello" text="Тепер ти працюєш в макдональдсі. Змірісь" prefHeight="200" GridPane.rowIndex="2" />
    <Label GridPane.columnIndex="1" fx:id="Cooks" GridPane.rowIndex="2" />
    <Label GridPane.columnIndex="3" fx:id="Orders" GridPane.rowIndex="2" />
    <Label alignment="TOP_CENTER" wrapText="true" prefHeight="100" prefWidth="350" GridPane.rowIndex="2" GridPane.columnIndex="2" fx:id="action"/>
    <Label GridPane.columnIndex="3" wrapText="true" fx:id="OrdersQueue" prefHeight="100" GridPane.rowIndex="3"/>
    <Label GridPane.rowIndex="3" wrapText="true" fx:id="CooksEvent" GridPane.columnIndex="1" prefHeight="100"/>
    <Button fx:id="takeStats" visible="false" text="Підрахуй" GridPane.columnIndex="1" onAction="#Stats" />
</GridPane>